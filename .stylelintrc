{
  "extends": ["stylelint-config-recommended-scss"],
  "rules": {
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "%", "s", "px", "vh"],
    "alpha-value-notation": ["percentage", { "exceptProperties": ["opacity"] }],

    "no-invalid-position-at-import-rule": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "use"
        ]
      }
    ],
    
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "responsive",
          "variants",
          "screen",
          "use",
          "extend"
        ]
      }
    ]
  }
}

